{
  "name": "Avatar Wallet",
  "manifest_version": 2,
  "version": "1.0",
  "description": "Avatar Wallet",
  "icons": {
    "16": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "background": {
    "scripts": [
      "static/js/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "images/logo.png",
    "default_title": "Avatar Wallet",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css":["static/css/content.css"],
      "js": [
        "static/js/content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "tabs",
    "declarativeContent",
    "storage",
    "notifications"
  ],
  "web_accessible_resources": ["insert.js"]
}

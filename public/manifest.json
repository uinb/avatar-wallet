{
  "name": "Avatar Wallet",
  "manifest_version": 3,
  "version": "1.0.0",
  "description": "Avatar Wallet",
  "icons": {
    "16": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "index.html",
  "action": {
    "default_icon": "images/logo.png",
    "default_title": "Avatar Wallet",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "storage"
  ],
  "host_permissions":[
    "https://*/*",
    "http://*/*",
    "wss://*/*",
    "ws://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [ "inPageScript.js"],
      "matches": [ "<all_urls>"]
    },
    {
      "resources": [ "index.html"],
      "matches": [ "<all_urls>"]
    }
  ]
}
